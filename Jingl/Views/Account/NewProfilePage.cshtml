@{
    ViewData["Title"] = "NewProfilePage";
}
<style>
    .list-inline > li {
        margin-right: -23px !important;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-12" style="background-color: #da2e73; height: 50px; max-height: 300px;">
            <img class="mt-3" src="~/template/img/left-arrow (3).svg" />
        </div>
        <div class="col-12 p-0">
            <img src="~/template/img/mainphoto.png" class="img-fluid" />
        </div>
    </div>
    <div class="row">
        <div style="position: absolute; top: 20%;z-index: 1" class="col-12 text-center d-flex align-items-center flex-column justify-content-center h-100">
            <div class="bg-white rounded-corner py-4" style="height: 70px; width: 120px;">
                <h4 class="font-weight-bold">
                    Play
                    <span> <img src="~/template/img/play.svg" /></span>
                </h4>
            </div>
        </div>
    </div>
    <div class="row" style="background-color: #ebecee;">
        <div class="col-12 text-left pl-5 py-2 mt-5">
            <h3 class="text-black mt-2">
                Agatha Christie

                <span class="ml-5 text-red" style="font-size: 13px;">
                    Share <img src="~/template/img/Share.svg" />
                </span>
            </h3>
            <h5 style="color: #969292">
                TV Show Host - MTV
            </h5>
            <p style="font-size: 14px;" class="mt-4">
                Hi Everyone! I am soooo excited to be on JINGL so I can connect with you all. If you are
                HAPPY! Don't forget to leave me a big thumbs up review, every review helps and brings me joy. Tell your friends! Love, Peace and Harmony my lovelies xxx Agatha
            </p>
            <ul class="list-inline">
                <li class="list-inline-item">
                    <img src="~/template/img/instagram.svg" />
                </li>
                <li class="list-inline-item">
                    <img src="~/template/img/youtube.svg" />
                </li>
                <li class="list-inline-item">
                    <img src="~/template/img/facebook.svg" />
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5>For Johnie Ray</h5>
                </div>
                <img class="card-img-bottom" src="~/template/img/mainphoto.png" alt="Card image">
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5>For Johnie Ray</h5>
                </div>
                <img class="card-img-bottom" src="~/template/img/mainphoto.png" alt="Card image">
            </div>
        </div>
    </div>
    <h4>Reactions...</h4>
    <div class="row">
        <div class="col">
            <div class="card">
                <img class="card-img-bottom" src="~/template/img/mainphoto.png" alt="Card image">
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img class="card-img-bottom" src="~/template/img/mainphoto.png" alt="Card image">
            </div>
        </div>
    </div>
</div>